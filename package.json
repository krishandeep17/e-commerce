{
  "name": "e-commerce",
  "version": "1.0.0",
  "type": "module",
  "description": "E-commerce application built with the MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node --env-file=.env backend/server.js",
    "server": "node --watch --env-file=.env backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node --env-file=.env backend/seeder.js --import",
    "data:delete": "node --env-file=.env backend/seeder.js --delete"
  },
  "keywords": [],
  "author": "Krishandeep",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.19.2",
    "mongoose": "^8.5.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
